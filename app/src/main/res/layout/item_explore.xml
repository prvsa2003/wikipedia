<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="9dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_main_explore"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="fitXY"
            android:src="@drawable/shahin_najafi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/txt_explore_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shahin Najafi"
                android:textColor="@color/black_light"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/txt_explore_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Iranian musician and singer"
                android:textSize="15sp" />

            <View
                android:layout_width="76dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_light" />

            <TextView
                android:id="@+id/txt_explore_ditail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:lineSpacingExtra="6dp"
                android:maxLines="5"
                android:text="@string/txtditel"
                android:textColor="@color/black_light"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>